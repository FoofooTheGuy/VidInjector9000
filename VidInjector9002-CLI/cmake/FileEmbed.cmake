function(writefile output_file c_name size)
	set(output_cpp "")
	file(SIZE ${file} filesize)
	set(counter 0)
	set(size 0)
	set(oldpercent 0)
	foreach(hex IN LISTS SEPARATED_HEX)
		string(APPEND output_cpp "0x${hex}, ")
		math(EXPR counter "${counter}+1")
		math(EXPR size "${size}+1")
		# 12 bytes per line
		if(counter GREATER 11)
			string(APPEND output_cpp "\n	")
			set(counter 0)
		endif()
		file(APPEND ${outfile_cpp}
			${output_cpp}
		)
		set(output_cpp "")
		# here https://stackoverflow.com/a/20790402
		math(EXPR percent "((100 * ${size} + (${size} + ${filesize})/2) / (${size} + ${filesize})) * 2")
		if(percent GREATER oldpercent)
			pad_string(padpercent ${percent} 3)
			message("[${padpercent}%] Generating ${c_name}.cpp")
			set(oldpercent ${percent})
		endif()
	endforeach()
	set(size ${size} PARENT_SCOPE)
endfunction()

# https://gist.github.com/jtanx/96ded5e050d5ee5b19804195ee5cf5f9
function(pad_string output str length)
	string(LENGTH "${str}" _strlen)
	math(EXPR _strlen "${length} - ${_strlen}")
	
	string(REPEAT " " ${_strlen} _pad)
	set(padded "${_pad}${str}")
	
	set(${output} "${padded}" PARENT_SCOPE)
endfunction()

