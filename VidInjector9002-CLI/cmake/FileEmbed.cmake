function(FileEmbedSetup)
	if (NOT EXISTS ${CMAKE_BINARY_DIR}/file_embed)
		file(MAKE_DIRECTORY ${CMAKE_BINARY_DIR}/file_embed)
	endif ()
	
	if (NOT EXISTS ${CMAKE_BINARY_DIR}/file_embed/placeholder.c)
		file(WRITE ${CMAKE_BINARY_DIR}/file_embed/placeholder.c "")
	endif ()
	
	add_library(file_embed ${CMAKE_BINARY_DIR}/file_embed/placeholder.c)
	target_include_directories(file_embed PUBLIC ${CMAKE_BINARY_DIR}/file_embed)
endfunction()

function(FileEmbedAddArray file)
	FileEmbedGenerateArray(${file} var)
	FileEmbedArray(${file} ${var})
endfunction()

function(FileEmbedAddVector file)
	FileEmbedGenerateVector(${file} var)
	FileEmbedVector(${file} ${var})
endfunction()

function(FileEmbedArray file var)
	target_sources(file_embed PUBLIC ${var})
	
	add_custom_command(
		OUTPUT ${var}
		COMMAND ${CMAKE_COMMAND}
		-DRUN_FILE_EMBED_GENERATE_ARRAY=1
		-DFILE_EMBED_GENERATE_PATH_ARRAY=${file}
		-P ${CMAKE_SOURCE_DIR}/cmake/FileEmbed.cmake
		MAIN_DEPENDENCY ${file}
	)
endfunction()

