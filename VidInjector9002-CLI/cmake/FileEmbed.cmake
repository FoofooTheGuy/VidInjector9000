function(FileEmbedGenerateArray file generated_cpp)
	get_filename_component(base_filename ${file} NAME)
	set(output_filename "${base_filename}.cpp")
	string(MAKE_C_IDENTIFIER ${base_filename} c_name)
	file(READ ${file} content HEX)
	#message(${content})

	# Separate into individual bytes.
	string(REGEX MATCHALL "([A-Fa-f0-9][A-Fa-f0-9])" SEPARATED_HEX ${content})
	
	set(outfile_cpp ${CMAKE_BINARY_DIR}/file_embed/${c_name}.cpp)
	set(outfile_hpp ${CMAKE_BINARY_DIR}/file_embed/${c_name}.hpp)
	
	file(SIZE ${file} filesize)
	file(WRITE ${outfile_cpp}
		"// This code was generated by CMake script.\n"
		"//\n"
		"// Changes to this file may cause incorrect behavior and will be lost if the code is regenerated.\n"
		"#include \"${c_name}.hpp\"\n"
		"\n"
		"const uint8_t ${c_name}_data[${filesize}] = {\n"
		"	"
	)
	
	writefile(${outfile_cpp} ${c_name} size)
	
	file(APPEND ${outfile_cpp}
		"\n"
		"};\n"
	)
	
	message("Generating ${c_name}.hpp")
	file(WRITE ${outfile_hpp}
		"// This code was generated by CMake script.\n"
		"//\n"
		"// Changes to this file may cause incorrect behavior and will be lost if the code is regenerated.\n"
		"#ifndef ${c_name}_H\n"
		"#define ${c_name}_H\n"
		"\n"
		"#include <stdint.h>\n"
		"\n"
		"extern const uint8_t ${c_name}_data[${size}];\n"
		"\n"
		"#endif // ${c_name}_H\n"
	)
	
	set(${generated_cpp} ${outfile_cpp} PARENT_SCOPE)
endfunction()

